#!/bin/bash
# ğŸŒªï¸ Smart HRRR CLI Launcher
# Automatically detects the correct Python environment

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Check if we're in a conda environment
if [[ -n "$CONDA_DEFAULT_ENV" ]]; then
    echo "ğŸ Using conda environment: $CONDA_DEFAULT_ENV"
    PYTHON_CMD="python"
else
    # Try to find python3
    if command -v python3 &> /dev/null; then
        PYTHON_CMD="python3"
    elif command -v python &> /dev/null; then
        PYTHON_CMD="python"
    else
        echo "âŒ No Python found! Please install Python or activate your conda environment."
        exit 1
    fi
fi

# Check if required dependencies are available
$PYTHON_CMD -c "import rich, typer, questionary" 2>/dev/null
if [ $? -ne 0 ]; then
    echo "âŒ Missing required dependencies!"
    echo "ğŸ’¡ Please install them with:"
    echo "   pip install rich typer questionary"
    exit 1
fi

# Run the CLI
cd "$SCRIPT_DIR"
exec $PYTHON_CMD hrrr_cli.py "$@"